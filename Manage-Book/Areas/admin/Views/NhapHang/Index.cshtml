@model IEnumerable<CuoiKi.Areas.admin.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section header{
    QUẢN LÝ NHẬP SÁCH
}

@using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @Html.ActionLink("Tạo mới", "Create", "NhaCungCap", new { @class = "btn bg-delete" })
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.tenNhaCungCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>Chi tiết nhập hàng</th>
    </tr>

    @{ var i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.tenNhaCungCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.id }, new { @class = "bg-red" })
            </td>
        </tr>
        i++;
    }

</table>
