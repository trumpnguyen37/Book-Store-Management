@model CuoiKi.Areas.admin.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section header{
    TẠO MỚI DANH MỤC SÁCH
}
<div class="col-lg-12 form-group">
    @Html.ActionLink("Trở về", "Index", "DanhMuc", new { @class = "btn bg-delete" })
</div>
@using (Html.BeginForm("Create", "DanhMuc", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.tenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.tenDanhMuc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tenDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn bg-delete">Tạo</button>
            </div>
        </div>
    </div>
}


